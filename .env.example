# copy this file to backend/.env and fill in your actual API key

# gemini API configuration  
GEMINI_API_KEY=your_gemini_api_key_here

# app Configuration
DEBUG=True
ALLOWED_HOSTS=["http://localhost:3000", "http://127.0.0.1:3000"]

# file Storage
MAX_FILE_SIZE=52428800  # 50MB pdfs
UPLOAD_DIR=storage
VIDEO_DIR=videos
CLIPS_DIR=clips

# manim settings
MANIM_QUALITY=medium_quality